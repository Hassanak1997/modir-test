<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_3sdp"
    android:background="@drawable/card_background"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    >
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="68dp"
            android:layout_height="69dp"
            android:background="@drawable/person"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginRight="@dimen/_7sdp"
            android:layout_alignParentRight="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_request"
        android:text="محمد حسن آکوچکیان اصفهانی"
        android:textSize="20sp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:textColor="@color/red1"
        android:layout_toLeftOf="@id/profile_image"/>
    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_request"
        android:layout_toLeftOf="@id/profile_image"
        android:layout_marginRight="@dimen/_15sdp">
        <TextView
            android:id="@+id/tx1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color1"
            android:text="تاریخ درخواست:"
            android:textSize="@dimen/_9sdp"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/datecreated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_toLeftOf="@id/tx1"
            android:text="99/02/06"
            android:textSize="@dimen/_9sdp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel1"
        android:layout_toLeftOf="@id/profile_image"
        android:layout_marginRight="@dimen/_15sdp">
        <TextView
            android:id="@+id/tx2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color1"
            android:text="تاریخ مرخصی:"
            android:textSize="@dimen/_9sdp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/daterest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_9sdp"
            android:text="99/02/06"
            android:layout_toLeftOf="@id/tx2"
            android:layout_marginRight="@dimen/_21sdp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/request_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده از طراحان گرافیک است. چاپگرها و متون بلکه روزنامه و مجله در ستون و سطرآنچنان که لازم است و برای شرایط فعلی تکنولوژی مورد نیاز و کاربردهای متنوع با هدف بهبود ابزارهای کاربردی می باشد. کتابهای زیادی در شصت و سه درصد گذشته، حال و آینده شناخت فراوان جامعه و متخصصان را می طلبد تا با نرم افزارها شناخت بیشتری را برای طراحان رایانه ای علی الخصوص طراحان خلاقی و فرهنگ پیشرو در زبان فارسی ایجاد کرد. در این صورت می توان امید داشت که تمام و دشواری موجود در ارائه راهکارها و شرایط سخت تایپ به پایان رسد وزمان مورد نیاز شامل حروفچینی دستاوردهای اصلی و جوابگوی سوالات پیوسته اهل دنیای موجود طراحی اساسا مورد استفاده قرار گیرد."
        android:justificationMode="inter_word"
        android:layout_below="@id/profile_image"
        android:padding="@dimen/_3sdp"
        android:textSize="@dimen/_9sdp"
        android:layout_margin="@dimen/_3sdp"/>
    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/request_text"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center">
        <RelativeLayout
            android:id="@+id/txt_deny"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img2"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/no"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="رد"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:paddingRight="@dimen/_5sdp"
                android:layout_toLeftOf="@id/img2"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/txt_accept"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/yes"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/img1"
                android:paddingRight="@dimen/_5sdp"
                android:text="قبول"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_below="@id/request_text"/>
</RelativeLayout>

</FrameLayout>